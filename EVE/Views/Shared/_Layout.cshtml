<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EVE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    
    <header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EVE</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item right-nav">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Carts" asp-action="Index"><i class="bi bi-cart"></i></a>
                    </li>
                    <li class="nav-item right-nav">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Favorite" asp-action="Index"><i class="bi bi-heart"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
            </header>




    <div class="container"     style="background-color: #f2efe8;">
>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div class="bottom" id="bottom" style=" display: flex; flex-direction: row; justify-content: space-between; width: 100%; padding:20px;">
        <div class="footerList" id="aboutUs">
            <h3>About Us</h3>
            <a href="#" class="about">About</a>  <br>
            <a href="#" class="developers">Developers</a> <br>
            <a href="#" class="careers">Careers</a>
        </div>
        <div class="footerList" id="termsOfUse">
            <h3>Terms Of Use</h3>
            <a href="#" class="websiteTerms">Website Terms</a> <br>
            <a href="#" class="shippingTerms">Shipping Terms</a> <br>
            <a href="#" class="privacyPolicy">Privacy Policy</a>
        </div>
        <div class="footerList" id="contactUs">
            <h3>Contact Us</h3>
            <a href="#" class="adress">Address</a> <br>
            <a href="#" class="phones">Phones</a> <br>
            <a href="#" class="email">Email</a> <br>
            <a href="#" class="email">Leave a message</a>
        </div>
    </div>


    <footer class="border-top footer text-muted" style=" text-align: center; bottom: 0;width: 100%;">
        <div class="container">
            &copy; 2021 - EVE - Coded by Yarden, Raz, Itay and Aviv.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
