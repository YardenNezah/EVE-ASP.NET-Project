@model IEnumerable<EVE.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products:</h1>
<form>
    <input type="text" placeholder="Search A Product" id="input" />
    <i class="bi bi-search" onclick="searchProduct()"></i>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="grid-container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="card col-3" stylw="width:300px;">
                <h1 class="card-name">@item.ProductName</h1>
                <h2 class="product-type">@item.ProductType.Name</h2>
                <p class="item-description"> @item.Description</p>
                <p class="item-price"> @item.Price</p>
                <img src="@item.FrontImage" class="item-img" alt="img" />
                <img src="@item.ImageSource" class="item-imgsrc" alt="img" />
            </div>
        }
    </div>
</div>

